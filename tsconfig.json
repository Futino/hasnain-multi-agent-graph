{
  "compilerOptions": {
    "module": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["node", "express"],
    "rootDir": "./src",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
